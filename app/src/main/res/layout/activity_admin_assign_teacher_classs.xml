<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminAssignTeacherClasss">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showTeacherName"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showTeacherClass"
        android:layout_marginLeft="10dp"
        android:text="Teacher is currently assign to : No Class"/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Choose Class:"/>

    <Spinner
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_width="match_parent"
        android:id="@+id/spinnerid"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        ></Spinner>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:id="@+id/assignclass"
        android:text="Assign Class"
        android:background="@color/colorAccent"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</androidx.appcompat.widget.LinearLayoutCompat>